{
  "name": "security-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest __tests__/security.test.ts",
    "security:check": "./scripts/test-security.sh",
    "security:check:prod": "./scripts/production-security-test.sh",
    "security:audit": "npm audit --audit-level=moderate",
    "security:headers": "curl -I http://localhost:3000 | grep -E '(Content-Security|Strict-Transport|X-Frame|X-Content|Referrer|Permissions)'",
    "security:validate": "npm run security:audit && npm run test:security && npm run security:check"
  },
